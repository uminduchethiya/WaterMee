<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Loading">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/final0"
        android:orientation="vertical"
        android:id="@+id/background01">

        <TextView
            android:id="@+id/textview01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="WATERME"
            android:textColor="@color/black"
            android:textSize="100px"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background02"
        android:orientation="vertical"
        android:layout_below="@+id/background01"
        android:background="@drawable/planted01">


        <ProgressBar
            android:layout_width="136dp"
            android:layout_height="78dp"
            android:layout_below="@id/textview01"
            android:layout_marginStart="130dp"
            android:layout_marginTop="100dp"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
